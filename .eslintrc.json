{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier",
    "eslint-plugin-import",
    "eslint-plugin-jsx-a11y"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "bracketSameLine": true,
        "jsxSingleQuote": false,
        "trailingComma": "es5",
        "semi": true,
        "singleQuote": true,
        "endOfLine": "auto",
        "max-len": ["error", {"code": 80}]
      }
    ],
    "react/prop-types": ["error"]
  }
}
